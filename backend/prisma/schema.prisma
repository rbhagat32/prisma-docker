generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  posts Post[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Post {
  id      String @id @default(uuid())
  title   String
  content String

  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  createdAt DateTime @default(now()) @map("created_at")

  @@map("posts")
}
